<script>
  const API_URL = "http://localhost:3001/api/category-list"; // Địa chỉ API để lấy danh sách thể loại

  // Load danh sách thể loại sản phẩm
  function loadCategories() {
    $.ajax({
      url: API_URL,
      method: "GET",
      dataType: "json",
      success: function(response) {
        let html = "";
        $.each(response.categories, function(index, category) {
          html += `
            <tr>
              <td>${category._id}</td>
              <td class="text-left">${category.name}</td>
              <td>
                <button class="btn btn-warning btn-sm action-btn edit-btn" data-id="${category._id}">Chỉnh Sửa</button>
                <button class="btn btn-danger btn-sm action-btn delete-btn" data-id="${category._id}">Xóa</button>
              </td>
            </tr>
          `;
        });
        $("#category-list").html(html);
      },
      error: function(xhr, status, error) {
        console.error("Lỗi khi gọi API:", error);
        console.log("Phản hồi từ server:", xhr.responseText);
      }
    });
  }

  // Load thể loại sản phẩm khi trang được tải
  $(document).ready(function() {
    loadCategories();
  });

  // Chỉnh sửa thể loại
  $(document).on("click", ".edit-btn", function() {
    let categoryId = $(this).data("id");  // Lấy ID thể loại cần chỉnh sửa
    window.location.href = `/web/category/edit/${categoryId}`;  // Chuyển hướng đến trang chỉnh sửa
  });

  // Xóa thể loại
  $(document).on("click", ".delete-btn", function() {
    let categoryId = $(this).data("id");
    if (confirm("Bạn có chắc chắn muốn xóa thể loại này?")) {
      $.ajax({
        url: `http://localhost:3001/api/delete-category/${categoryId}`, // Gửi yêu cầu DELETE đến API
        method: "DELETE",
        success: function(response) {
          alert("Xóa thể loại thành công!");
          loadCategories(); // Tải lại danh sách thể loại
        },
        error: function(xhr) {
          console.error("Lỗi khi xóa thể loại:", xhr.responseText);
          alert("Có lỗi xảy ra khi xóa thể loại!");
        }
      });
    }
  });
</script>

